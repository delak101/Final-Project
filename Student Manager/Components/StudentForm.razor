@page "/students"
@using Microsoft.EntityFrameworkCore

<h3>Add Student</h3>
<form @onsubmit="AddStudent">
    <div>
        <input type="text" @bind="newStudentName" placeholder="Student Name" />
    </div>
    <div>
        <input type="number" @bind="newStudentAge" placeholder="Student Age" />
    </div>
    <div>
        <input type="text" @bind="newStudentAddress" placeholder="Student Address" />
    </div>
    <button type="submit">Add Student</button>
</form>

@if (students == null)
{
    <p>Loading...</p>
}
else
{
    <h3>Student List</h3>
    <ul>
        @foreach (var student in students)
        {
            <li>
                @student.Name
                <button @onclick="() => ViewStudentDetails(student.Id)">Details</button>
            </li>
        }
    </ul>
}

@code {
    private string newStudentName;
    private int newStudentAge;
    private string newStudentAddress;
    private List<Student> students;
    ManagerContext db = new();

    protected override async Task OnInitializedAsync()
    {
        // Load students from the database
        students = await db.Students.ToListAsync();
    }

    private async Task AddStudent()
    {
        if (!string.IsNullOrWhiteSpace(newStudentName) && newStudentAge > 0 && !string.IsNullOrWhiteSpace(newStudentAddress))
        {
            var student = new Student { Name = newStudentName, Age = newStudentAge, Address = newStudentAddress };
            db.Students.Add(student);
            await db.SaveChangesAsync();
            students.Add(student); // Update the list
            newStudentName = string.Empty; // Reset the input
            newStudentAge = 0; // Reset the input
            newStudentAddress = string.Empty; // Reset the input
        }
    }

