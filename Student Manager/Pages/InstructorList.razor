@page "/instructors"
@using Microsoft.EntityFrameworkCore

<h3>Manage Instructors</h3>

<!-- Include the InstructorForm component -->
<InstructorForm @ref="instructorForm" OnInstructorAdded="LoadInstructors" />

@if (instructors == null)
{
    <p>Loading...</p>
}
else
{
    <h3>Instructor List</h3>
    <ul>
        @foreach (var instructor in instructors)
        {
            <li>@instructor.Name (Course: @instructor.Course?.Name)</li>
        }
    </ul>
}

@code {
    private InstructorForm instructorForm;
    private List<Instructor> instructors;
    ManagerContext db = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadInstructors();
    }

    private async Task LoadInstructors()
    {
        instructors = await db.Instructors.Include(i => i.Course).ToListAsync();
    }
}
