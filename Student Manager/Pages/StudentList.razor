@page "/students"
@using Microsoft.EntityFrameworkCore

<h3>Manage Students</h3>

<!-- Include the StudentForm component -->
<StudentForm @ref="studentForm" OnStudentAdded="LoadStudents" />

@if (students == null)
{
    <p>Loading...</p>
}
else
{
    <h3>Student List</h3>
    <ul>
        @foreach (var student in students)
        {
            <li>
                @student.Name
                <button @onclick="() => ViewStudentDetails(student.Id)">Details</button>
            </li>
        }
    </ul>
}

@code {
    private StudentForm studentForm;
    private List<Student> students;
    ManagerContext db = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        students = await db.Students.ToListAsync();
    }

    private void ViewStudentDetails(int studentId)
    {
        // Logic to view student details
    }
}
